    "P_spam = 0.1\n",
    "P_free_given_spam = 0.9\n",
    "P_free_given_ham = 0.05\n",
    "P_ham = 1 - P_spam\n",
    "\n",
    "P_free = (P_free_given_spam * P_spam) + (P_free_given_ham * P_ham)\n",
    "\n",
    "P_spam_given_free = (P_free_given_spam * P_spam) / P_free\n",
    "\n",
    "print(\"P(Free) =\", P_free)\n",
    "print(\"P(Spam | Free) =\", P_spam_given_free)"
   ]
